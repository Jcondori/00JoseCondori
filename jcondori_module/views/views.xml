<odoo>
    <data>
        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="hospital_patient_tree">
            <field name="name">hospital.patient.tree</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="surname"/>
                    <field name="birthdate"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="hospital_patient_form">
            <field name="name">hospital.patient.form</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="surname"/>
                            <field name="birthdate"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="hospital_patint_action_window">
            <field name="name">Patient</field>
            <field name="res_model">hospital.patient</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- server action to the one above -->
        <!--
            <record model="ir.actions.server" id="jcondori_module.action_server">
              <field name="name">jcondori_module server</field>
              <field name="model_id" ref="model_jcondori_module_jcondori_module"/>
