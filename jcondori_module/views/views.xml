                action = {
                  "type": "ir.actions.act_window",
                  "view_mode": "tree,form",
                  "res_model": model._name,
                }
              </field>
            </record>
        -->

        <!-- Top menu item -->

        <menuitem name="Hospital" id="hospital_menu_root"/>

        <!-- menu categories -->
        <menuitem name="Masters" id="hospital_masters" parent="hospital_menu_root"/>
        <!--            <menuitem name="Menu 2" id="jcondori_module.menu_2" parent="jcondori_module.menu_root"/>-->

        <!-- actions -->

        <menuitem name="Patients" id="hospital_patient_menu" parent="hospital_masters"
                  action="hospital_patint_action_window"/>
